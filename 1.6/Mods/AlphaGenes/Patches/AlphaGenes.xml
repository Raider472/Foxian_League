            <xpath>Defs/GeneDef[defName="AG_ParasiticStinger"]/exclusionTags</xpath>
            <value>
                <li>FL_GeneticPurityExclusion</li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="AG_ParasiticStinger"]</xpath>
            <value>
                <exclusionTags>
                    <li>FL_GeneticPurityExclusion</li>
                </exclusionTags>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/GeneDef[defName="AG_ParasiticStingerEndogenes"]/exclusionTags</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="AG_ParasiticStingerEndogenes"]/exclusionTags</xpath>
            <value>
                <li>FL_GeneticPurityExclusion</li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="AG_ParasiticStingerEndogenes"]</xpath>
            <value>
                <exclusionTags>
                    <li>FL_GeneticPurityExclusion</li>
                </exclusionTags>
            </value>
        </nomatch>
    </Operation>
</Patch>