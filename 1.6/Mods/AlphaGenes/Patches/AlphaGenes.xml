<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!--Add exclusion tag if alpha genes is active-->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/GeneDef[defName="AG_AsexualFission"]/exclusionTags</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="AG_AsexualFission"]/exclusionTags</xpath>
            <value>
                <li>FL_GeneticPurityExclusion</li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="AG_AsexualFission"]</xpath>
            <value>
                <exclusionTags>
                    <li>FL_GeneticPurityExclusion</li>
                </exclusionTags>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/GeneDef[defName="AG_ParasiticStinger"]/exclusionTags</xpath>
