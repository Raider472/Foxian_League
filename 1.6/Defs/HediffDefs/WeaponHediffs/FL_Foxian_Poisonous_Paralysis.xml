<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>FL_Poisonous_Paralysis</defName>
        <label>poisonous paralysis</label>
        <description>This person has been injected with a paralyzing agent via a weapon or another external factor. The more severe this effect is, the more numb the person will become until they fall unconscious. This effect is not lethal on healthy persons and will most likely be gone after a day.</description>
        <hediffClass>Foxian_league.Hediff_ShowSeverity</hediffClass>
        <defaultLabelColor>(0.87, 0.79, 0.23)</defaultLabelColor>
        <initialSeverity>0.01</initialSeverity>
        <scenarioCanAdd>false</scenarioCanAdd>
        <countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
        <preventsCrawling>true</preventsCrawling>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.9</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.2</minSeverity>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.77</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <label>moderate</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.64</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.6</minSeverity>
                <label>major</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.49</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.30</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.75</minSeverity>
                <label>extreme</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.25</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_ChanceToRemove">
                <intervalTicks>2500</intervalTicks>
                <chance>0.03</chance>
            </li>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.7</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>
</Defs>