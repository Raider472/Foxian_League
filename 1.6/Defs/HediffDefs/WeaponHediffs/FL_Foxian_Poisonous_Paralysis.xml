<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>FL_Poisonous_Paralysis</defName>
        <label>poisonous paralysis</label>
        <description>This person  has been in contact with a paralysing agent via a weapon or another external factor, The more sever this effect is, the more numb the person will become until they fall unconscious. This effect will be removed after a day, but it can disapear earlier.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
        <preventsCrawling>true</preventsCrawling>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.9</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.30</minSeverity>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.77</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.45</minSeverity>
                <label>moderate</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.64</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.7</minSeverity>
                <label>major</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.49</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.30</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.8</minSeverity>
                <label>extreme</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.25</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_ChanceToRemove">
                <intervalTicks>2500</intervalTicks>
                <chance>0.05</chance>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>45000~60000</disappearsAfterTicks>
            </li>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.4</severityPerDay>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>
</Defs>