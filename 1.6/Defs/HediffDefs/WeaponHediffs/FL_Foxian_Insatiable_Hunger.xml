<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>FL_Insatiable_Hunger</defName>
        <label>insatiable hunger</label>
        <description>This person has been in contact with a cursed blade that feeds on the life force of other living beings. This blade will graciously strenghten it's owner if they feed him by killing others. However, if the wielder of the blade does not nourish it for a while, they will suffer dire consequenses such as their life force being drained, this could result in the death of the wielder.</description>
        <hediffClass>Foxian_league.Hediff_ShowSeverity</hediffClass>
        <defaultLabelColor>(0.83, 0.19, 0.32)</defaultLabelColor>
        <initialSeverity>0.001</initialSeverity>
        <minSeverity>0.001</minSeverity>
        <lethalSeverity>1</lethalSeverity>
        <maxSeverity>1</maxSeverity>
        <scenarioCanAdd>false</scenarioCanAdd>
        <countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
        <stages>
            <li>
                <label>sated</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
                <statFactors>
                    <InjuryHealingFactor>1.5</InjuryHealingFactor>
                    <MeleeDamageFactor>1.25</MeleeDamageFactor>
                </statFactors>
                <statOffsets>
                    <ImmunityGainSpeed>0.5</ImmunityGainSpeed>
                </statOffsets>
            </li>
            <li>
                <minSeverity>0.10</minSeverity>
                <label>satisfied</label>
                <statFactors>
                    <InjuryHealingFactor>1.2</InjuryHealingFactor>
                    <MeleeDamageFactor>1.1</MeleeDamageFactor>
                </statFactors>
                <statOffsets>
                    <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
                </statOffsets>
            </li>
            <li>
                <minSeverity>0.3</minSeverity>
                <label>peckish</label>
            </li>
            <li>
                <minSeverity>0.5</minSeverity>
                <label>hungry</label>
                <hungerRateFactor>1.1</hungerRateFactor>
                <statFactors>
                    <MeleeDamageFactor>0.95</MeleeDamageFactor>
                    <PsychicSensitivity>0.8</PsychicSensitivity>
                </statFactors>
                <mentalStateGivers>
                    <li>
                        <mentalState>Berserk</mentalState>
                        <mtbDays>15</mtbDays>
                    </li>
                </mentalStateGivers>
            </li>
            <li>
                <minSeverity>0.6</minSeverity>
                <label>starving</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.9</setMax>
                    </li>
                </capMods>
                <hungerRateFactor>1.25</hungerRateFactor>
                <statFactors>
                    <InjuryHealingFactor>0.75</InjuryHealingFactor>
                    <MeleeDamageFactor>0.95</MeleeDamageFactor>
                    <PsychicSensitivity>0.6</PsychicSensitivity>
                </statFactors>
                <mentalStateGivers>
                    <li>
                        <mentalState>Berserk</mentalState>
                        <mtbDays>75</mtbDays>
                    </li>
                </mentalStateGivers>
            </li>
            <li>
                <minSeverity>0.75</minSeverity>
                <label>on the brink of death</label>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.8</setMax>
                    </li>
                </capMods>
                <hungerRateFactor>1.5</hungerRateFactor>
                <statFactors>
                    <InjuryHealingFactor>0.5</InjuryHealingFactor>
                    <MeleeDamageFactor>0.8</MeleeDamageFactor>
                    <PsychicSensitivity>0.2</PsychicSensitivity>
                </statFactors>
                <mentalStateGivers>
                    <li>
                        <mentalState>Berserk</mentalState>
                        <mtbDays>100</mtbDays>
                    </li>
                </mentalStateGivers>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>0.168</severityPerDay>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>
</Defs>