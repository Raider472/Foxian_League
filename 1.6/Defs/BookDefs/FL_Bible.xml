<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BookBase">
        <defName>FL_ReligiousTome</defName>
        <label>old bible</label>
        <description>An old bible with shredded pages recounting a peculiar tale.</description>
        <graphicData>
            <texPath>Things/Item/Book/Novel/Novel</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <uiIconPath>Things/Item/Book/Novel/Novel</uiIconPath>
        <statBases>
            <MarketValue>100</MarketValue>
        </statBases>
        <comps>
            <li Class="CompProperties_Book">
                <nameMaker>FL_Namer_Bible</nameMaker>
                <descriptionMaker>FL_Description_Bible</descriptionMaker>
                <ageYearsRange>200~500</ageYearsRange>
                <openGraphic>
                    <texPath>Things/Item/Book/Novel/Novel_Open</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>0.7</drawSize>
                </openGraphic>
                <verticalGraphic>
                    <texPath>Things/Item/Book/Novel/Novel_Vertical</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <addTopAltitudeBias>true</addTopAltitudeBias>
                </verticalGraphic>
                <doers>
                    <li Class="BookOutcomeProperties_JoyFactorModifier" />
                </doers>
            </li>
        </comps>
    </ThingDef>
</Defs>