        </comps>
        <modExtensions>
            <li Class="VEF.Things.ThingDefExtension">
                <weaponDraftedDrawOffsets>
                    <north>
                        <drawOffset>(0.2, 0, 0.05)</drawOffset>
                    </north>
                    <east>
                        <drawOffset>(0.1, 0, 0.03)</drawOffset>
                    </east>
                    <south>
                        <drawOffset>(0.2, 0, 0.05)</drawOffset>
                    </south>
                    <west>
                        <drawOffset>(-0.1, 0, 0.03)</drawOffset>
                    </west>
                </weaponDraftedDrawOffsets>
            </li>
        </modExtensions>
    </ThingDef>

