<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="FoxianBaseMeleeWeapon">
        <defName>FL_Weapon_ParalysingDagger</defName>
        <label>paralysing dagger</label>
        <techLevel>Medieval</techLevel>
        <relicChance>0.5</relicChance>
        <description>A badly forged dagger coated in a potent poison that will make someone numb and number for each consecutive hits.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponMelee/Knife</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>2</uiIconScale>
        <weaponTags>
            <li>FoxianRaiderNormalMelee</li>
        </weaponTags>
        <costStuffCount>30</costStuffCount>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <statBases>
            <WorkToMake>1400</WorkToMake>
            <Mass>0.4</Mass>
        </statBases>
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <burnableByRecipe>false</burnableByRecipe>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>7</power>
                <cooldownTime>1.5</cooldownTime>
            </li>
            <li>
                <label>blade</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.5</cooldownTime>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>11</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="Foxian_league.CompProperties_HediffOnHit">
                <hediffOnHit>FL_Poisonous_Paralysis</hediffOnHit>
                <minValue>0.03</minValue>
                <maxValue>0.07</maxValue>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="FoxianLegendaryMeleeWeapon">
        <defName>FL_Weapon_CursedSword</defName>
        <label>cursed sword</label>
        <description>A cursed sword that drain the lifes of all those killed by it, no one knows how it was fabricated or what materials is it composed of. This sword has an insatiable hunger and will even kill it's owner if it has not been nourished for a while. This blade is also known to make it hard for it's owner to separate from him.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponMelee/Monosword</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <weaponTags>
            <li>FoxianRaiderLegendaryMelee</li>
        </weaponTags>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <statBases>
            <Mass>2.5</Mass>
        </statBases>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.5</cooldownTime>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>21</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.47</armorPenetration>
            </li>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>27</power>
                <cooldownTime>2.2</cooldownTime>
                <armorPenetration>0.34</armorPenetration>
            </li>
        </tools>
        <comps>
            <li Class="Foxian_league.ComProperties_AddHediffOnEquip">
                <hediffOnEquip>FL_Insatiable_Hunger</hediffOnEquip>
            </li>
        </comps>
    </ThingDef>
</Defs>